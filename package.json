{
  "name": "@franklx/esbuild-plugin-clean",
  "version": "1.0.4+1.0.0",
  "description": "An esbuild plugin to clean your build folder.",
  "author": "Jonathan Wilsson <jonathan.wilsson@gmail.com>",
  "keywords": [
    "esbuild",
    "plugin",
    "clean"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "dependencies": {
    "del": "^7.0.0"
  },
  "devDependencies": {
    "@jwilsson/eslint-config-prettier": "^7.13.3",
    "@jwilsson/eslint-config-typescript": "^7.13.3",
    "@jwilsson/prettier-config": "^7.2.0",
    "@jwilsson/tsconfig": "^1.3.0",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.1",
    "tempy": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "esbuild": ">=0.11.18"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "prettier --write src"
  },
  "eslintConfig": {
    "extends": [
      "@jwilsson/eslint-config-typescript",
      "@jwilsson/eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off"
    }
  },
  "prettier": "@jwilsson/prettier-config",
  "license": "MIT"
}
